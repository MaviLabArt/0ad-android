<?xml version="1.0" encoding="utf-8"?>
<effect>
	<technique>
		<require context="PASS_REFLECTIONS"/>
		<require shaders="arb"/>
		<require shaders="glsl"/>
		<require shaders="spirv"/>
		<pass shader="terrain_decal">
			<depth mask="false"/>
			<cull mode="FRONT"/>
			<blend src="src_alpha" dst="one_minus_src_alpha"/>
		</pass>
	</technique>

	<technique>
		<require shaders="arb"/>
		<require shaders="glsl"/>
		<require shaders="spirv"/>
		<require context="MODE_WIREFRAME"/>
		<pass shader="terrain_decal">
			<depth mask="false"/>
			<polygon mode="LINE"/>
			<blend src="src_alpha" dst="one_minus_src_alpha"/>
		</pass>
	</technique>

	<technique>
		<require shaders="arb"/>
		<require shaders="glsl"/>
		<require shaders="spirv"/>
		<pass shader="terrain_decal">
			<depth mask="false"/>
			<blend src="src_alpha" dst="one_minus_src_alpha"/>
		</pass>
	</technique>
</effect>
